<dt>Name</dt>
<dd> <%=@actor.name %> </dd>

<dt>Dob</dt>
<dd><%=@actor.dob %> </dd>

<dt>Bio</dt>
<dd><%=@actor.bio %> </dd>

<dt>Image</dt>
<dd> <img src= "<%=@actor.image %>"></dd>


