</dl>

<h1>Filmography</h1>

<table class= "table" border = "1">

<tr>
<th>Title</th>


<th>Year</th>
<th>Director</th>
<th>Character Name</th>
<th></th>
</tr>

<% @char.each do |a_thing| %>

<% mov = @list_of_movies.where({:id => a_thing.movie_id }).at(0) %>
<% dir = @direct.where({:id => mov.director_id }).at(0) %>

<tr>
<th> <%=mov.title%> </th>



<th> <%=mov.year%></th>
<th> <%=dir.name%></th>
<th><%=a_thing.name%></th>

<th> <a href = "/movies/<%= mov.id%>"> Show more </th>
</tr>





<%end%>


</table>
